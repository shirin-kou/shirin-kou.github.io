<% var title = 'Question'; %>
<% var subTitle = '嗜好について教えてください'; %>
<% var question = ['Q1, 普段どれくらい水分をとりますか?','Q2, どちらの方が好きですか？','Q3, 普段の食事量はどれくらいですか？','Q4, 普段お酒はどれくらい飲みますか？','Q5, タバコは吸いますか？']; %>
<% var questionName = ['water','temp','meal','alcohol','tobacco']; %>


<div class="content-area">
    <h1><%= title %></h1>
    <h2><%= subTitle %></h2>

    <div class="question">
        <div><%= question[0] %></div>
        <form name=<%= questionName[0] %>>
            <input type="radio" name=<%= questionName[0] %> value="よくとる">よくとる
            <input type="radio" name=<%= questionName[0] %> value="普通">普通
            <input type="radio" name=<%= questionName[0] %> value="あまり取らない">あまり取らない
        </form>
    </div>
    <div class="question">
        <div><%= question[1] %></div>
        <form name=<%= questionName[1] %>>
            <input type="radio" name=<%= questionName[1] %> value="冷たいもの">冷たいもの
            <input type="radio" name=<%= questionName[1] %> value="温かいもの">温かいもの
        </form>
    </div>
    <div class="question">
        <div><%= question[2] %></div>
        <form name=<%= questionName[2] %>>
            <input type="radio" name=<%= questionName[2] %> value="普通">普通
            <input type="radio" name=<%= questionName[2] %> value="大食い">大食い
            <input type="radio" name=<%= questionName[2] %> value="少食">少食
        </form>
    </div>
    <div class="question">
        <div><%= question[3] %></div>
        <form name=<%= questionName[3] %>>
            <input type="radio" name=<%= questionName[3] %> value="ほとんど毎日">ほとんど毎日
            <input type="radio" name=<%= questionName[3] %> value="たまに飲む">たまに飲む
            <input type="radio" name=<%= questionName[3] %> value="飲まない">飲まない
        </form>
    </div>
    <div class="question">
        <div><%= question[4] %></div>
        <form name=<%= questionName[4] %>>
            <input type="radio" name=<%= questionName[4] %> value="吸わない">吸わない
            <input type="radio" name=<%= questionName[4] %> value="現在吸っている">現在吸っている
        </form>
    </div>
</div>