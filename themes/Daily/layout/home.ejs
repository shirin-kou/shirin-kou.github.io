<!-- unchange -->
<% var title = 'Home'; %>
<% var subTitle_0 = '今日の波形'; %>
<% var subTitle_1 = 'このような状態ではありませんか？該当する状態にチェックを入れてください。'; %>

<!-- change -->
<% var measureTime = '測定時間'; %>
<% var feature = '波形の特徴（ex.脈の拍動がいつもより大きくなっています）'; %>
<% var checkList = ['質問１（ex.早食い、食べ物をよく噛まずに飲み込んでいませんか？）','質問２（ex.夜遅くに油っこい食事を摂っていませんか？）','質問３（ex.休憩を取らずに、長時間仕事をしてしまいがちではありませんか？）']; %>


<!-- HTML -->
<% var myMeta = {
    title: 'HOME PAGEだよ',
  };
%>
<%- include('_partial/nav', {meta: myMeta}) %>

<div class="content-area">
    <h1><%= title %></h1>

    <div>
        <h2><%= subTitle_0 %></h2>
        <p><%= feature %></p>
        <img src="/images/wave.png" alt="" height="100">
        <p><%= measureTime %></p>
    </div>
    <div>
        <h1><%= subTitle_1 %></h1>
        <form name="checkList">
            <input type="checkbox" name="checkList" value=<%= checkList[0] %>><%= checkList[0] %><br>
            <input type="checkbox" name="checkList" value=<%= checkList[1] %>><%= checkList[1] %><br>
            <input type="checkbox" name="checkList" value=<%= checkList[2] %>><%= checkList[2] %>
        </form>
    </div>

    <div class="adviceButton">
        <a href="https://shirin-kou.github.io/advice/"><input type="button" value="Adviceを見る"></a>
    </div>
</div>

