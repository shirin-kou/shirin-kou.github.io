<body class="homeBody">

  <nav class="navbar">

    <!-- googleName,Img,タップしたらlog-out Buttonがでてくる -->
    <div id="userInfo">
      <img id="img" src="" alt="">
      <p id="googleDisplayName"></p>
    </div>

    <div id="logoutButton" style="display:none">
      <a href="/login/"><input type="button" class="logoutButton" value="ログアウト" onclick="signOut()" /></a>
    </div>

  </nav>


  <div class="content-area">
    <div class="content-area-home">
      <img id="waveImg" src="" alt="" height="150">
      <p id="feature"></p>
      <p class="measureTime"><%= page.measureTime %></p>
      <div class="adviceButton">
        <a href="/measure/"><input class="adviceButton-inside" type="button" value="測定を始める"></a>
      </div>
    </div>
  </div>

  <!-- Slider main container -->
  <div class="swiper-container">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      <div class="swiper-slide">

        <div class="grad-item">
          <p id="question0"></p>
          <p id="condition0"></p>
          <p id="advice0"></p>
        </div>
        <span class="grad-trigger">アドバイスを読む</span>

      </div>
      <div class="swiper-slide">
        <div class="grad-item">
          <p id="question1"></p>
          <p id="condition1"></p>
          <p id="advice1"></p>
        </div>
        <span class="grad-trigger">アドバイスを読む</span>
      </div>
      <div class="swiper-slide">
        <div class="grad-item">
          <p id="question2"></p>
          <p id="condition2"></p>
          <p id="advice2"></p>
        </div>
        <span class="grad-trigger">アドバイスを読む</span>
      </div>
      <div class="swiper-slide">
        <div class="grad-item">
          <p id="question3"></p>
          <p id="condition3"></p>
          <p id="advice3"></p>
        </div>
        <span class="grad-trigger">アドバイスを読む</span>
      </div>
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>

    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>

  </div>




</body>